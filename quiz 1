<title>RRB Section Control Quiz</title>
<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    background: #f8fafc;
    color: #222;
  }
  #container {
    max-width: 800px;
    margin: auto;
    padding: 20px;
  }
  h1, h2, h3 {
    text-align: center;
  }
  .question {
    margin-bottom: 20px;
  }
  .options label {
    display: block;
    margin-bottom: 8px;
    cursor: pointer;
  }
  button {
    padding: 10px 20px;
    border: none;
    background: #2563eb;
    color: white;
    border-radius: 5px;
    cursor: pointer;
  }
  button:hover {
    background: #1e40af;
  }
  #timer {
    position: fixed;
    top: 10px;
    right: 20px;
    font-weight: bold;
    font-size: 18px;
    background: #fff;
    padding: 6px 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
  }
</style>
